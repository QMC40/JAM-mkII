@model JAM_mkII.Models.DomainModels.Application
@{
    ViewBag.Title = "Review and submit application";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Apply">
                <input type="hidden" asp-for="ApplicationId" />

                <input asp-for="UserId" type="text" class="form-control" hidden readonly />
                <div>
                    <label asp-for="ApplicantName" class="control-label">Applicant Name</label>
                    <input asp-for="ApplicantName" type="text" value="@ViewBag.name" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="JobId" class="control-label">Job no</label>
                    <input asp-for="JobId" type="text" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="control-label">Position</label>
                    <input asp-for="Position" type="text" value="@ViewBag.position" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="StoreLoc" class="control-label">Store</label>
                    <input asp-for="StoreLoc" type="text" value="@ViewBag.store" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="ApplyDate" class="control-label"></label>
                    <input asp-for="ApplyDate" type="date"
                           min="@DateTime.Today.Date.ToShortDateString()" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <br />
                    <input type="submit" value="Save Change" class="btn btn-danger" asp-action="Apply" />
                    <input asp-controller="JobList" asp-action="Index" type="submit" value="Back to List" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}